<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>admin Login_Page</title>
    <link rel="shortcut icon" href="">
    <link rel="stylesheet" href="/css/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="main-container">
        <div class="container">
            <% errors.forEach(function(message){ %>
                <div class="error-display">
                    <%=message%>
                </div>
                <% }) %>
            <form action="/admin/login" method="POST" class="form" id="login">
                <h1 class="form__title">Admin Login</h1>
                <div class="form__message form__message--error"></div>
    
                <div class="form__input-group">
                    <input name="username" type="text" class="form__input" autofocus placeholder="Username or email">
                    <div class="form__input-error-message"></div>
                </div>
    
                <div class="form__input-group">
                    <input name="password" type="password" class="form__input" placeholder="password">
                    <div class="form__input-error-message"></div>
                </div>
    
                <button class="form__button" type="submit">Continue</button>
                <p class="form__text">
                    <a href="#" class="form__link">Forgot your password?</a>
                </p>
                
            </form>
        </div>

        <div class="banner-container">
            <a class="logo" href="/"><i class="fa fa-university"></i></a>
            <h1 class="university-title">Egna Begna University</h1>
        </div>
    </div>
   
</body>

</html>